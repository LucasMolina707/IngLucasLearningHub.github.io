  <script>
    // =============================================================
    // [NO TOCAR / DO NOT TOUCH] – UTILIDADES BÁSICAS (ES/EN)
    // Año en footer / Year in footer
    document.getElementById('y').textContent = new Date().getFullYear();

    // Drawer refs
    const drawer = document.getElementById('drawer');
    const openBtn = document.getElementById('openDrawer');
    const closeBtn = document.getElementById('closeDrawer');

    function openDrawer(){
      drawer.classList.add('open');
      drawer.setAttribute('aria-hidden','false');
    }
    function closeDrawer(){
      drawer.classList.remove('open');
      drawer.setAttribute('aria-hidden','true');
    }

    // Click básico
    openBtn?.addEventListener('click', openDrawer);
    closeBtn?.addEventListener('click', closeDrawer);
    drawer?.addEventListener('click', (e)=>{ if(e.target===drawer) closeDrawer(); });

    // =============================================================
    // [NO TOCAR / DO NOT TOUCH] – HOVER/TOUCH LOGIC (ES/EN)
    let autoCloseTimer = null;
    const isDesktop = matchMedia('(hover:hover) and (pointer:fine)').matches;

    function setBurgerLabel(){
      if(!openBtn) return;
      openBtn.textContent = isDesktop ? 'Menú' : '☰';
    }
    setBurgerLabel();

    if (isDesktop){
      openBtn?.addEventListener('mouseenter', openDrawer);
      openBtn?.addEventListener('mouseleave', ()=>{
        setTimeout(()=>{
          const overDrawer = drawer.matches(':hover');
          if(!overDrawer) closeDrawer();
        }, 150);
      });
      drawer?.addEventListener('mouseleave', closeDrawer);
    }

    function startMobileAutoClose(){
      if(isDesktop) return;
      clearTimeout(autoCloseTimer);
      autoCloseTimer = setTimeout(()=>{ closeDrawer(); }, 5000);
    }
    if(!isDesktop){
      openBtn?.addEventListener('click', startMobileAutoClose);
      ['click','touchstart'].forEach(evt=>{
        drawer?.addEventListener(evt, startMobileAutoClose);
      });
    }

    // =============================================================
    // [NO TOCAR / DO NOT TOUCH] – COOKIES CONSENT (ES/EN)
    const CONSENT_KEY = 'lucasConsent';
    const CONSENT_VERSION = 'v1-2025-09';

    function getConsent(){
      try { const raw = localStorage.getItem(CONSENT_KEY); return raw ? JSON.parse(raw) : null; } catch(e){ return null; }
    }
    function setConsent(status){
      try { const data = { status, version: CONSENT_VERSION, ts: Date.now() };
        localStorage.setItem(CONSENT_KEY, JSON.stringify(data)); } catch(e){}
    }
    function shouldShowBanner(saved){
      if(!saved) return true;
      if(saved.version !== CONSENT_VERSION) return true;
      return false;
    }
    function enableAnalytics(){
      // [TOCAR/EDIT] Inyecta tu script solo si consent=granted
      // const s=document.createElement('script'); s.src='https://.../analytics.js'; document.head.appendChild(s);
    }
    function initConsentBanner(){
      const banner = document.getElementById('consent');
      const allow = document.getElementById('allow');
      const deny  = document.getElementById('deny');
      const saved = getConsent();

      if(shouldShowBanner(saved)){ banner.style.display='block'; }
      else if(saved.status === 'granted'){ enableAnalytics(); }

      allow?.addEventListener('click', ()=>{ setConsent('granted'); banner.style.display='none'; enableAnalytics(); });
      deny ?.addEventListener('click', ()=>{ setConsent('denied');  banner.style.display='none'; });

      document.getElementById('manageConsent')?.addEventListener('click',(e)=>{
        e.preventDefault();
        banner.style.display='block';
      });
    }
    document.addEventListener('DOMContentLoaded', initConsentBanner);

    // =============================================================
    // [MENSAJE PARA EL FUTURO YO / NOTE TO FUTURE ME]
    // ES: Si pides cambios, SOLO tocar:
    //   - Enlaces del drawer, textos visibles y contenido dentro de .pane
    //   - Mensaje/enlaces del footer
    //   - enableAnalytics() y CONSENT_VERSION
    //   - (Opcional) Colores de .drawer/.burger para contraste (sin cambiar estructura)
    // EN: If you ask for changes, ONLY edit:
    //   - Drawer links, visible texts, and content inside .pane
    //   - Footer note/links
    //   - enableAnalytics() and CONSENT_VERSION
    //   - (Optional) .drawer/.burger colors for contrast (keep structure)
  </script>
