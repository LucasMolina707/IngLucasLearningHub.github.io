          <!-- =====================================================
               [AÑADIDO / ADDED] – JS ENCAPSULADO PARA NAVEGACIÓN
               ES/EN: Encapsulated JS. Only touches nodes inside .cmp-2316.
               ===================================================== -->
          <script>
            (function(){
              const rail = document.getElementById('cmpContent');
              const prev = document.getElementById('cmpPrev');
              const next = document.getElementById('cmpNext');
              const isTouch = matchMedia('(max-width: 860px)').matches;

              // Botones ◀ ▶ (modo horizontal)
              function stepWidth(){ return rail?.clientWidth || 0; }
              prev?.addEventListener('click', ()=>{ if(!rail) return; rail.scrollBy({left:-stepWidth(), behavior:'smooth'}); });
              next?.addEventListener('click', ()=>{ if(!rail) return; rail.scrollBy({left: stepWidth(), behavior:'smooth'}); });

              // Resaltar enlace activo al hacer scroll
              const links = Array.from(document.querySelectorAll('.cmp-2316__subnav .cmp-2316__pill'));
              const sections = links.map(a => document.querySelector(a.getAttribute('href')));
              const io = new IntersectionObserver(entries=>{
                entries.forEach(e=>{
                  if(e.isIntersecting){
                    const id = '#'+e.target.id;
                    links.forEach(l=> l.classList.toggle('is-active', l.getAttribute('href')===id));
                  }
                });
              }, {root: isTouch? rail:null, threshold:0.6});
              sections.forEach(s=> s && io.observe(s));

              // Estilo activo
              const style = document.createElement('style');
              style.textContent = `.cmp-2316__pill.is-active{border-color:var(--blue-500); color:#fff; background:rgba(26,99,199,.18)}`
              document.currentScript.parentElement.appendChild(style);
            })();
          </script>
        </section>
      </div>
    </section>
  </div>

